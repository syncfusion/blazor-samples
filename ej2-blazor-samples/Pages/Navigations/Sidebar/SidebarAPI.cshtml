@page "/Sidebar/SidebarAPI"

@using Syncfusion.EJ2.RazorComponents.Navigations
@using Syncfusion.EJ2.RazorComponents.Buttons

@*Hidden:Lines*@
@using ej2_blazor_samples
@{
    SampleBrowser.CurrentSampleName = "SidebarAPI";
    SampleBrowser.CurrentControlName = "Sidebar";
    SampleBrowser.CurrentControlCategory = "Sidebar";
    SampleBrowser.CurrentControl = SampleBrowser.Config.Sidebar;
    SampleBrowser.ActionDescription = new string[] {
    };
    SampleBrowser.Description = new string[] {
    };
}
@*End:Hidden*@


<div id="wrapper">
    <div class="col-lg-12 col-sm-12 col-md-12">
        <!-- sidebar element declaration -->
        <span id="hamburger" onclick="@show" class="e-icons menu"></span>
        <EjsSidebar ID="default-sidebar" ref="sidebar">
            <ChildContent>
                <div class="title-header">
                    <div style="display:inline-block"> Sidebar </div>
                    <span id="close" class="e-icons" onclick="@close"></span>
                </div>
                <div class="sub-title">
                    Place your primary content here.
                </div>
            </ChildContent>
        </EjsSidebar>
        <!-- end of sidebar element -->
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="title">Overview</h2>
                <br />
                <p>
                    The Sidebar component is a collapsible side content placed along with the main content either in left
                    or right side of the page.
                </p>
                <p>
                    <br>
                </p>
                <h3 class="title">Options</h3>
                <br />
                <div class="inline-element responsive">
                    <!--Open or close the sidebar -->
                    <p class=" inline-element" style="width:70%">
                        <b>Toggle</b> - Toggles the Sidebar to be open or closed state.
                    </p>
                    <div onclick="@togglebtnclick">
                        <EjsButton ID="togglesidebar" CssClass='e-info inline-element right' IsToggle="true" ref="toggleElement">Toggle</EjsButton>
                    </div>
                    <br />
                    <br />
                    <!--Sidebar position -->
                    <p class=" inline-element" style="width:70%">
                        <b>Position</b> - Allows to place the sidebar in right or left side of the page.
                    </p>
                    <div onclick="@positionbtnclick">
                        <EjsButton ID="positionButton" CssClass='e-info inline-element right' IsToggle="true" ref="positionElement">Right</EjsButton>
                    </div>
                    <br />
                    <br />
                    <!--Sidebar types -->
                    <p class="inline-element" style="width:70%"><b>Types </b> - Specifies the act of expanding or collapsing the sidebar with main content.</p>
                    <div class="inline-element right" style="width:75px">
                        <EjsDropDownList ID="types" Index="3" PopupHeight="200px" CssClass="e-textbox right" DataSource="@data"></EjsDropDownList>                        
                    </div>
                    <br />
                    <br />
                    <!--on document click -->
                    <p class=" inline-element" style="width:70%"><b>Closing on document click</b> - Allows to collapse / close the sidebar on document click.</p>
                    <div onclick="@docbtnclick">
                        <EjsButton ID="documentclick" CssClass='e-info inline-element right' IsToggle="true" ref="docElement"><ChildContent>True</ChildContent></EjsButton>
                    </div>
                    <br />
                    <br />
                    <!--showbackdrop option -->
                    <p class=" inline-element" style="width:70%"><b>Backdrop</b> - Sets the backdrop over the main content area on open / expanded state. </p>
                    <div onclick="@backbtnclick">
                        <EjsButton ID="backdrop" CssClass='e-info inline-element right' IsToggle="true" ref="backdropElement"><ChildContent>True</ChildContent></EjsButton>
                    </div>
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>
    <title>Essential JS 2 (Preview) for ASP.Net Core Sidebar-> API</title>
    <!--end of sample level element declaration -->
</div>

