  </ItemGroup>

	<ItemGroup Condition=" '$(Configuration)'=='Release' and !$(DefineConstants.Contains('STAGING'))">
		<Content Update="wwwroot/styles/component-samples/**">
			<CopyToOutputDirectory>Never</CopyToOutputDirectory>
			<CopyToPublishDirectory>Never</CopyToPublishDirectory>
		</Content>
	</ItemGroup>
</Project>
  
