        new HierarchicalDetails()   { Id= "10", Role= "Statistics Department", Manager= "5", Color= "#2E95D8" },
        new HierarchicalDetails()   { Id= "11", Role= "Logistics Department", Manager= "5", ChartType= "right", Color= "#2E95D8" },
