    public double GaugeOneAngle = 160;
    public string GaugeOneRadius = "25%";
    public double GaugeTwoAngleOne = 90;
    public string GaugeTwoRadiusOne = "12%";
    public double GaugeTwoAngleTwo = 252;
    public string GaugeTwoRadiusTwo = "100%";
    public double GaugeTwoAngleThree = 106;
    public string GaugeTwoRadiusThree = "106%";
    public double GaugeThreeAngle = 146;
    public string GaugeThreeRadius = "24%";
    public double GaugeFourAngle = 132;
    public string GaugeFourRadius = "20%";
    public double GaugeFiveAngle = 136;
    public string GaugeFiveRadius = "21%";
    public double GaugeSixAngle = 76;
    public string GaugeSixRadius = "10%";
    private List<int> SegmentValues { get; set; } = Enumerable.Range(0, 81).ToList();

    protected override void OnInitialized()
    {
        Theme = ThemeHelper.GetCurrentTheme(NavigationManager.Uri);        
    }
}
