                                </CircularGaugeAnnotation>
                            </CircularGaugeAnnotations>
                        </CircularGaugeAxis>
                    </CircularGaugeAxes>
                </SfCircularGauge> 
            </td>
            <td class="gaugeAlign">
                <SfCircularGauge Height="280px" Width="300px" Background="transparent" Theme="@Theme">
                    <CircularGaugeAxes>
                        <CircularGaugeAxis StartAngle="220" EndAngle="140" Radius="90%" Minimum="0" Maximum="100">
                            <CircularGaugeAxisLineStyle Width="0" />
                            <CircularGaugeAxisLabelStyle Position="Position.Outside" Offset="-5" AutoAngle="true">
                                <CircularGaugeAxisLabelFont Size="0px" FontFamily="inherit"/>
                            </CircularGaugeAxisLabelStyle>
                            <CircularGaugeAxisMajorTicks Height="0" />
                            <CircularGaugeAxisMinorTicks Height="0" />
                            <CircularGaugePointers>
                                @foreach (var value in SegmentValues)
                                {
                                    <CircularGaugePointer Value="@value"
                                                          Color="#7edfb4"
                                                          Radius="80%"
                                                          MarkerWidth="38"
                                                          MarkerHeight="3"
                                                          Type="PointerType.Marker"
                                                          MarkerShape="GaugeShape.Rectangle">
                                        <CircularGaugePointerAnimation Enable="false"></CircularGaugePointerAnimation>
                                    </CircularGaugePointer>
                                }
                            </CircularGaugePointers>
                            <CircularGaugeRanges>
                                <CircularGaugeRange Start="0" End="100" StartWidth="38" EndWidth="38" Color="#f6f7f9" Radius="98%"></CircularGaugeRange>
                            </CircularGaugeRanges>
                            <CircularGaugeAnnotations>
                                <CircularGaugeAnnotation Angle="@GaugeSixAngle" ZIndex="1" Radius="@GaugeSixRadius">
                                    <ContentTemplate>
                                        <div class="gaugeSixFirstText">80% <br /> <div style="font-family:inherit"> Completed </div> </div>
                                    </ContentTemplate>
                                </CircularGaugeAnnotation>
                            </CircularGaugeAnnotations>
                        </CircularGaugeAxis>
                    </CircularGaugeAxes>
                </SfCircularGauge>
            </td>
        </tr>
    </table>
</div>

@code {
