                                        <div class="gaugeFourFirstText" style="font-family:inherit;font-size:30px;">21%</div>
                                    </ContentTemplate>
                                </CircularGaugeAnnotation>
                            </CircularGaugeAnnotations>
                        </CircularGaugeAxis>
                    </CircularGaugeAxes>
                </SfCircularGauge> 
            </td>
            <td class="gaugeAlign">
                <SfCircularGauge Height="280px" Width="300px" Background="transparent" Theme="@Theme">
                    <CircularGaugeAxes>
                        <CircularGaugeAxis StartAngle="220" EndAngle="140" Radius="90%" Minimum="0" Maximum="100">
                            <CircularGaugeAxisLineStyle Width="0" />
                            <CircularGaugeAxisLabelStyle Position="Position.Outside">
                                <CircularGaugeAxisLabelFont Size="0px" />
                            </CircularGaugeAxisLabelStyle>
                            <CircularGaugeAxisMajorTicks Height="0" />
                            <CircularGaugeAxisMinorTicks Height="0" />
                            <CircularGaugePointers>
                                <CircularGaugePointer Type="PointerType.RangeBar" Value="54" RoundedCornerRadius="20" Color="#ffe852" PointerWidth="30" Radius="90%">
                                    <CircularGaugePointerAnimation Enable="false"></CircularGaugePointerAnimation>
                                </CircularGaugePointer>
                            </CircularGaugePointers>
                            <CircularGaugeRanges>
                                <CircularGaugeRange Start="0" End="100" Radius="90%" StartWidth="30" EndWidth="30" Color="#E0E0E0" RoundedCornerRadius="20">
