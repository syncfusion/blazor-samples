    .gaugeTwoThirdText { font-family: inherit; margin-left: 10px;margin-top: -10px; }
    .gaugeThreeFirstText { font-family: inherit; margin-top: -20px;margin-left: -28px; }
    .gaugeFourFirstText { font-family: inherit; margin-left: -24px; margin-top: -10px; }
    .gaugeFiveFirstText {font-family: inherit; margin-left: -30px;margin-top: -20px; }
    .gaugeSixFirstText { text-align: center;font-size: 22px;font-family: inherit;margin-left: -15px; margin-top: 3px; }
    
    .gaugeAlign {
        width: 50%;
    }
</style>
<div class="control-section">
    <table>
        <tr>
            <td class="gaugeAlign">
                <SfCircularGauge Height="280px" Width="300px" Background="transparent" Theme="@Theme">
                    <CircularGaugeAxes>
                        <CircularGaugeAxis StartAngle="230" EndAngle="130" Radius="110%">
                            <CircularGaugeAxisLineStyle Width="30" Color="#f6f7f9"></CircularGaugeAxisLineStyle>
                            <CircularGaugeAxisLabelStyle Position="Position.Outside" Offset="25">
                                <CircularGaugeAxisLabelFont Size="12px" FontFamily="inherit">
