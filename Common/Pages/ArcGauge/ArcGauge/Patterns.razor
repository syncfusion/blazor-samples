                                </CircularGaugePointer>
                                <CircularGaugePointer Type="PointerType.Marker" MarkerShape="GaugeShape.Circle" Value="22" Color="white" MarkerWidth="30" MarkerHeight="30" Radius="80%">
                                    <CircularGaugePointerAnimation Enable="false"></CircularGaugePointerAnimation>
                                </CircularGaugePointer>
                                <CircularGaugePointer Type="PointerType.Marker" MarkerShape="GaugeShape.Circle" Value="22" Color="#a8f789" MarkerWidth="18" MarkerHeight="18" Radius="80%">
                                    <CircularGaugePointerAnimation Enable="false"></CircularGaugePointerAnimation>
                                </CircularGaugePointer>
                            </CircularGaugePointers>
                            <CircularGaugeRanges>
                                <CircularGaugeRange Start="0" End="100" Radius="90%" StartWidth="25" EndWidth="25" Color="#E0E0E0" RoundedCornerRadius="20">
