                                </CircularGaugePointer>
                            </CircularGaugePointers>
                            <CircularGaugeRanges>
                                <CircularGaugeRange Start="0" End="38" StartWidth="10" EndWidth="10" Color="#7edfb4" Radius="86%"></CircularGaugeRange>
