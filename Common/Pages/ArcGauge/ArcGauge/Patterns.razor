                                        <div class="gaugeTwoFirstText" style="font-size:22px;">0%</div>
                                    </ContentTemplate>
                                </CircularGaugeAnnotation>
                                <CircularGaugeAnnotation Angle="@GaugeTwoAngleThree" ZIndex="1" Radius="@GaugeTwoRadiusThree">
                                    <ContentTemplate>
                                        <div class="gaugeTwoThirdText" style="font-size:22px;">100%</div>
                                    </ContentTemplate>
                                </CircularGaugeAnnotation>
                            </CircularGaugeAnnotations>
                        </CircularGaugeAxis>
                    </CircularGaugeAxes>
                </SfCircularGauge>
            </td>
