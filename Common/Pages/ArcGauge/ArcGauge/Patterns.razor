                                        <div class="gaugeThreeFirstText" style="font-size:30px;font-family:inherit">450 <br /> </div>
                                    </ContentTemplate>
                                </CircularGaugeAnnotation>
                                <CircularGaugeAnnotation Angle="0" ZIndex="1" Radius="112%">
                                    <ContentTemplate>
                                        <div style="font-size:12px;margin-left: -5px;"> 300 </div>
                                    </ContentTemplate>
                                </CircularGaugeAnnotation>
                                <CircularGaugeAnnotation Angle="50" ZIndex="1" Radius="116%">
                                    <ContentTemplate>
                                        <div style="font-size:12px"> 400 </div>
