        text-indent: 16px;
    }
    .sample_container.badge-accordion .e-accordion .e-acrdn-item.e-select .e-acrdn-header .e-acrdn-header-icon .e-acrdn-icons.e-icons,
    .sample_container.badge-accordion .e-badge {
        font-size: 12px;
    }
    .sample_container.badge-accordion .e-accordion .e-acrdn-item .e-acrdn-header .e-acrdn-header-content,
    .sample_container.badge-accordion .e-accordion .e-acrdn-content .msg {
        font-size: 14px;
    }
    .sample_container.badge-accordion .acrdn-msg {
        list-style-type: none;
        margin: 0px;
        padding: 0px;
    }
    .e-accordion .e-tgl-collapse-icon::before {
        content: none;
    }
    .sample_container.badge-accordion .e-control.e-accordion .e-toggle-icon {
        font-size: 18px;
        top: -1px;
        display: block;
    }
    /* Tailwind customization*/
    .tailwind .sample_container.badge-accordion .e-control.e-accordion .e-toggle-icon {
