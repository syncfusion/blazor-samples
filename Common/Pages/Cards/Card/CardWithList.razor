@page "/card/card-with-list"

@using Syncfusion.Blazor.Cards
@using Syncfusion.Blazor.Lists
@*Hidden:Lines*@
@inherits SampleBaseComponent;
@*End:Hidden*@
<SampleDescription>
    <p>This sample demonstrates the rendering of the list in Card component.</p>
</SampleDescription>
<ActionDescription>
    <p>The Card is a small, flexible, and extensible container in which users can show defined content in a specific structure. In this sample, you can render the list component in the Card component as a template.</p>
</ActionDescription>

<div class="control-section">
    <div class="row">
        <div class="col-lg-6">
            <SfCard>
                <CardContent>
                    <SfListView Id="List" DataSource="@ListData" CssClass="e-list-template" SortOrder="Syncfusion.Blazor.Lists.SortOrder.Ascending">
                        <ListViewFieldSettings TValue="DataModel" Id="Id" Text="Text"></ListViewFieldSettings>
                        <ListViewTemplates TValue="DataModel">
                            <Template>
                                <div class="e-list-wrapper e-list-multi-line e-list-avatar">
                                    @if (((context as DataModel).Avatar) != "")
                                    {
                                        <span class="e-avatar e-avatar-circle">@((context as DataModel).Avatar)</span>
                                    }
                                    else
                                    {
                                        <span class="@((context as DataModel).Pic) e-avatar e-avatar-circle"> </span>
                                    }
                                    <span class="e-list-item-header">@((context as DataModel).Text)</span>
                                    @if (((context as DataModel).Contact) == "Online")
                                    {
                                        <span class="e-list-content e-card-online">@((context as DataModel).Contact)</span>    
                                    }
                                    else
                                    {
                                        <span class="e-list-content e-card-offline">@((context as DataModel).Contact)</span>    
                                    }
                                    
                                </div>
                            </Template>
                        </ListViewTemplates>
                    </SfListView>
                </CardContent>
            </SfCard>
        </div>
    </div>
</div>

@code{

    private List<DataModel> ListData = new List<DataModel>();
    
    protected override void OnInitialized()
    {
        base.OnInitialized();
        
        ListData.Add(new DataModel { Text = "Fua Lamba ", Contact = "Online", Id = "5", Avatar = "", Pic = "avatar-profile-1" });
        ListData.Add(new DataModel { Text = "Harrisburg Keith", Contact = "Offline", Id = "1", Avatar = "", Pic = "avatar-profile-2" });
        ListData.Add(new DataModel { Text = "Izumi Katsuyoshi", Contact = "Online", Id = "2", Avatar = "", Pic = "avatar-profile-3" });
        ListData.Add(new DataModel { Text = "Nawf El Azam", Contact = "Offline", Id = "9", Avatar = "", Pic = "avatar-profile-4" });
        ListData.Add(new DataModel { Text = "Sofietje Boksem", Contact = "Online", Id = "7", Avatar = "", Pic = "avatar-profile-5" });
    }

    public class DataModel
    {
        public string Id { get; set; }
        public string Text { get; set; }
        public string Contact { get; set; }
        public string Avatar { get; set; }
        public string Pic { get; set; }
    }
}

