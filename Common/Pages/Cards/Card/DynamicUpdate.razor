@page "/card/dynamic-update"

@using Syncfusion.Blazor.Cards
@using Syncfusion.Blazor.Buttons
@*Hidden:Lines*@
@inherits SampleBaseComponent;
@*End:Hidden*@
<SampleDescription>
    <p>This sample demonstrates a dynamic update for the Card component.</p>
</SampleDescription>
<ActionDescription>
    <p>The Card <a href="https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.Cards.CardHeader.html" aria-label="Class reference of CardHeader"><code>Header</code></a>, <a href="https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.Cards.CardImage.html" aria-label="Class reference of CardImage"><code>Image</code></a>, and <a href="https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.Cards.CardFooter.html" aria-label="Class reference of CardFooter"><code>Footer</code></a> can be customized in this sample.</p>
</ActionDescription>

<div class="row">
    <div class="control-section col-lg-9">
        <SfCard ID="DynamicCard">
            <CardHeader Title="Robert Jhonson" SubTitle="Chief Executive" />
            @if (IsMedia)
            {
                <CardImage Image="@(SampleService.WebAssetsPath + "images/cards/robert-jhonson.png")" />
            }
            @if (IsText)
            {
                <CardContent Content="Robert received an MBA in marketing from the University of California. He can do marketing for multiple products. He has experience of 10 years in the marketing field." />
            }
            @if (IsFooter)
            {
                <CardFooter>
                    <CardFooterContent Text="Add More" />
                </CardFooter>
            }
        </SfCard>
    </div>
    <div class="col-lg-3 property-section">
        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<br>
        <div class="property-panel-section">
            <div class="property-panel-header">Properties</div>
            <div class="property-panel-content">
                <table class="table">
                    <tr>
                        <td>Card Media</td>
                        <td>
                            <SfCheckBox TChecked="bool" @onchange="@(() => IsMedia = !IsMedia)"></SfCheckBox>
                        </td>
                    </tr>
                    <tr>
                        <td>Card Content</td>
                        <td>
                            <SfCheckBox TChecked="bool" @onchange="@(() => IsText = !IsText)"></SfCheckBox>
                        </td>
                    </tr>
                    <tr>
                        <td>Card Footer</td>
                        <td>
                            <SfCheckBox TChecked="bool" @onchange="@(() => IsFooter = !IsFooter)"></SfCheckBox>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

@code{
    bool IsMedia = false;
    bool IsText = false;
    bool IsFooter = false;
    
}

