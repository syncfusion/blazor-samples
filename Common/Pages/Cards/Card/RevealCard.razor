@page "/card/reveal-card"

@using Syncfusion.Blazor.Cards
@using Syncfusion.Blazor.Buttons
@*Hidden:Lines*@
@inherits SampleBaseComponent;
@*End:Hidden*@

<SampleDescription>
    <p>This sample demonstrates rendering the Card with reveal layouts. The hidden information of the Card can be revealed to see while clicking "Know more".</p>
</SampleDescription>
<ActionDescription>
    <p>The Cards in this sample have hidden content within the DOM which is available behind the visible element.</p>
</ActionDescription>

<div class="control-section card-control-section tile_layout reveal_card_layout">
    <div class='row e-card-layout' style="margin: auto">
        <div>
            <SfCard>
                <CardImage Image="https://cdn.syncfusion.com/blazor/images/demos/cards/Tile_4.webp" />
                <CardContent>
                    @if (ShowTable)
                    {
                        <table class="card-details-table">
                            <tr>
                                <td>
                                    <div class="card-text-value"><b>Author</b></div>
                                </td>
                                <td>
                                    <div class="card-text-value">Steve Fenton</div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="card-text-value"><b>Published On</b></div>
                                </td>
                                <td>
                                    <div class="card-text-value">Jul 7, 2014</div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="card-text-value"><b>Pages</b></div>
                                </td>
                                <td>
                                    <div class="card-text-value">82</div>
                                </td>
                            </tr>
                        </table>
                    }
                    else
                    {
                        <table class="card-summary-table">
                            <tr>
                                <td style="text-align:left">
                                    <CardHeader Title="Typescript"></CardHeader>
                                </td>
                                <td>
                                    <SfButton CssClass="e-card-button" @onclick="@(()=> ShowTable = !ShowTable)">
                                        <span class="e-icons e-collapse"></span>
                                    </SfButton>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="1">
                                    Microsoft has done extensive work to make JavaScript easier to use. Microsoft TypeScript extends many features of .NET to JavaScript.
                                </td>
                            </tr>
                        </table>
                    }
                </CardContent>
                @if (ShowTable)
                {
                    <CardFooter>
                        <CardFooterContent>
                            <div class="footer-content">
                                <SfButton CssClass="e-btn e-outline e-primary" @onclick="@(()=> ShowTable = !ShowTable)">Know More</SfButton>
                                <button class="e-card-btn reveal-btn" title="Click to see more..." @onclick="@(()=> ShowTable = !ShowTable)">
                                    <span class="e-btn-icon e-icons e-reveal-icon e-icon-right"></span>
                                </button>
                            </div>
                        </CardFooterContent>
                    </CardFooter>
                }
            </SfCard>
        </div>
    </div>
</div>

@code{
    private bool ShowTable = true;
}

