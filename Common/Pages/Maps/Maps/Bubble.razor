    private void TriggerMapsColor(string socialMedia)
    {
        switch (socialMedia)
        {
            case "Snapchart":
                DataSource = SnapchartData;
                ShapeColor = IsLightTheme ? "#d4b930" : "#e3e249";
                BubbleColor = IsLightTheme ? "#b69602" : "#fefd02";
                BorderColor = "white";
