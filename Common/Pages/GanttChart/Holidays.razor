	.container-fluid {
		padding: 0px !important;
	}

	.e-gantt-holidays-sample {
		padding: 20px;
	}

	.e-gantt-holiday-reference-link {
		text-decoration: none !important;
	}

	.e-gantt-holiday-reference-link:hover,
	.e-gantt-holiday-reference-link:focus {
		text-decoration: underline !important;
	}
