@page "/datagrid/row-height"

@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Navigations
@*Hidden:Lines*@
@using blazor_ordersdetails
@inherits SampleBaseComponent
@inject NavigationManager NavigationManager


@*End:Hidden*@

<SampleDescription>
    <p>This sample demonstrates the DataGrid's row height feature.</p>
</SampleDescription>
<ActionDescription>
    <p>The <a target='_blank' href='https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.Grids.SfGrid-1.html#Syncfusion_Blazor_Grids_SfGrid_1_RowHeight' aria-label="Navigate to the RowHeight property reference for DataGrid component">RowHeight</a> property can be used to enable the Blazor DataGrid row height feature.</p>
   <p>In this demo, the <code>RowHeight</code> for all DataGrid rows can be changed to <b>20px</b>, <b>40px</b> and <b>60px</b> by clicking the toolbar button.</p>
    <p>More information about the Row height feature can be found in this <a target='_blank' href='https://blazor.syncfusion.com/documentation/datagrid/row-height' aria-label="Navigate to the documentation for row height in DataGrid component">documentation</a> section.</p>
</ActionDescription>

@{
    List<ItemModel> Toolbar = new List<ItemModel>();
    Toolbar.Add(new ItemModel { PrefixIcon = "e-small-icon", TabIndex = 0, Id = "big", Align = ItemAlign.Right, TooltipText="60px"  });
    Toolbar.Add(new ItemModel { PrefixIcon = "e-medium-icon", TabIndex = 0, Id = "medium", Align = ItemAlign.Right, TooltipText="40px" });
    Toolbar.Add(new ItemModel { PrefixIcon = "e-big-icon", TabIndex = 0, Id = "small", Align = ItemAlign.Right, TooltipText="20px" });
}

<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row">
            <SfGrid @ref="Grid" DataSource="@GridData" Height="400" RowHeight="@GridRowHeight" Toolbar="Toolbar">
                <GridEvents OnToolbarClick="ToolbarClick" TValue="OrdersDetails"></GridEvents>
                <GridColumns>
                    <GridColumn Field=@nameof(OrdersDetails.OrderID) HeaderText="Order ID" TextAlign="TextAlign.Right" Width="150"></GridColumn>
                    <GridColumn Field=@nameof(OrdersDetails.CustomerID) HeaderText="Customer ID" Width="130"></GridColumn>
                    <GridColumn Field=@nameof(OrdersDetails.OrderDate) HeaderText="Order Date" Format="d" TextAlign="TextAlign.Right" Width="130"></GridColumn>
                    <GridColumn Field=@nameof(OrdersDetails.Freight) TextAlign="TextAlign.Right" Width="130" Format="C2"></GridColumn>
                    <GridColumn Field=@nameof(OrdersDetails.ShippedDate) HeaderText="Shipped Date" Width="150" TextAlign="TextAlign.Right" Format="d"></GridColumn>
                    <GridColumn Field=@nameof(OrdersDetails.ShipCountry) HeaderText="Ship Country" Width="150"></GridColumn>
                </GridColumns>
            </SfGrid>
        </div>
    </div>
</div>

@*Hidden:Lines*@
<style>
    @@font-face {
        font-family: 'e-grid-rowheight';
        src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }
    .e-grid .e-small-icon::before, .e-grid .e-medium-icon::before, .e-grid .e-big-icon::before {
        font-family: 'e-grid-rowheight';       
    }
    .e-grid .e-small-icon::before {
        content: '\e707';
    }
    .e-grid .e-medium-icon::before {
        content: '\e701';
    }
    .e-grid .e-big-icon::before {
        content: '\e702';
    }
</style>
@*End:Hidden*@

@code{
    SfGrid<OrdersDetails>? Grid;

    public List<OrdersDetails>? GridData { get; set; }
	
    public int GridRowHeight = 20;
    

    protected override void OnInitialized()
    {
        
        GridData = OrdersDetails.GetAllRecords();
    }

    public void ToolbarClick(Syncfusion.Blazor.Navigations.ClickEventArgs args)
    {
        if (args.Item.Id == "small") {
            GridRowHeight = 20;
        }
        else if (args.Item.Id == "medium") {
            GridRowHeight = 40;
        }
        else {
            GridRowHeight= 60;
        }
    }
}
