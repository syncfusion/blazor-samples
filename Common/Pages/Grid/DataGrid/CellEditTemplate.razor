        public int TagId { get; set; }
        public string TagTopic { get; set; }
    }

    public List<TagContent> bloggerContents = new List<TagContent>
    {
        new TagContent() {TagId = 1 , TagTopic = "JavaScript"},
        new TagContent() {TagId = 2 , TagTopic = "Blazor"},
