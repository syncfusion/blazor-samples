        new BlogAuthorNames() {authorNames = "BOLID"},
        new BlogAuthorNames() {authorNames = "ANTON"},
        new BlogAuthorNames() {authorNames = "BLONP"},
        new BlogAuthorNames() {authorNames = "ANATR"}

    }.ToList();

    public class TagContent
