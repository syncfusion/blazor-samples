         display: inline-block;
         float: initial;
         padding-bottom: 0;
         padding-right: 0;
         padding-top: 0;
         text-align: center;
         vertical-align: top;
         width: calc(50% - 48px);
    }
     .e-adaptive-demo .e-pager .e-pagesizes, .e-adaptive-demo .e-pager .e-pagecountmsg, .e-adaptive-demo .e-pager .e-pagercontainer {
         display: none;
    }
     .e-adaptive-demo .e-pager .e-icons {
