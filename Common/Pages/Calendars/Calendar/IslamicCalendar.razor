@page "/Calendar/Islamic-Calendar"

@using Syncfusion.Blazor.Calendars

@*Hidden:Lines*@
@inherits SampleBaseComponent;
@*End:Hidden*@
<SampleDescription>
   <p>This example demonstrates the main features of the Islamic Calendar. In the Calendar, todayâ€™s date is always highlighted and receives focus if no other date is selected. Select any date from the Calendar to interact with it.</p>
</SampleDescription>
<ActionDescription>
    <p>
        The Hijri (Islamic) Calendar is a lunar-based calendar with functionalities similar to the Gregorian Calendar, including minimum and maximum date restrictions, date highlighting, and multiple date selection.
    </p>
</ActionDescription>

<div class="control-section">
    <div class="control-wrapper">
        <SfCalendar TValue="DateTime?" CalendarMode="CalendarType.Islamic" @bind-Value="@SelectedDate" HtmlAttributes="@(new Dictionary<string, object> { {"aria-label", "Islamic calendar"} })" ></SfCalendar>
    </div>
</div>

<style>
    .control-wrapper {
        max-width: 300px;
        margin: 0 auto;
        padding: 20px 0px 10px;
    }

    .example-label {
        font-size: 14px;
        display: block;
        margin: 0;
        padding: 20px 0px 0px;
    }
</style>

@code {
    public DateTime? SelectedDate { get; set; } = DateTime.Now;

}
