        <TreeMapTitleSettings Text="List of Countries by Unemployment Rate">
            <TreeMapTitleTextStyle Size="15px" FontFamily="Segoe UI" />
        </TreeMapTitleSettings>
        <TreeMapLeafItemSettings LabelPath="Name" ShowLabels="true" />
        <TreeMapLevels>
            <TreeMapLevel GroupPath="Continent" HeaderAlignment="Alignment.Far">
                <TreeMapLevelBorder Color="#000000" Width="0.5" />
                <TreeMapHeaderStyle FontFamily="Segoe UI" Color="#FFFFFF"></TreeMapHeaderStyle>
            </TreeMapLevel>
            <TreeMapLevel GroupPath="Country" HeaderAlignment="Alignment.Far">
                <TreeMapLevelBorder Color="#000000" Width="0.5" />
                <TreeMapHeaderStyle FontFamily="Segoe UI" Color="#FFFFFF"></TreeMapHeaderStyle>
            </TreeMapLevel>
        </TreeMapLevels>
    </SfTreeMap>
    <div class="urllink">
        Source:
        <a href="https://www.indexmundi.com/facts/visualizations/treemap#SL.UEM.TOTL.ZS:SL.UEM.TOTL.ZS"
