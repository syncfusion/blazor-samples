    public void CalculateSolarPosition()
    {
        var location = locations.FirstOrDefault(l => l.Name == SelectedLocation);
        if (location == null) return;
        double lat = location.Latitude * Math.PI / 180.0;
        int dayOfYear = SelectedDateTime.DayOfYear;
        double declination = 23.45 * Math.PI / 180.0 * Math.Sin(2 * Math.PI * (284 + dayOfYear) / 365.0);
        double hourAngle = 0; // Solar noon
        double elevation = Math.Asin(Math.Sin(declination) * Math.Sin(lat) +
        Math.Cos(declination) * Math.Cos(lat) * Math.Cos(hourAngle));
        SunElevation = Math.Max(0, elevation * 180.0 / Math.PI);
        SunAzimuth = 180.0;
        OptimalTilt = Math.Max(0, Math.Min(60, Math.Abs(location.Latitude)));
        if (SunElevation > 0)
        {
            double elevationRad = elevation;
            double airMass = 1.0 / Math.Sin(elevationRad);
            airMass = Math.Max(1.0, Math.Min(40.0, airMass));
            SolarIrradiance = 1353 * Math.Pow(0.7, Math.Pow(airMass, 0.678)) * Math.Sin(elevationRad);
            SolarIrradiance = Math.Max(0, SolarIrradiance);
        }
        else
        {
            SolarIrradiance = 0;
        }
    }

    public void CalculateEfficiency()
    {
        if (SunElevation <= 0)
        {
            Efficiency = 0;
            IncidenceAngle = 90;
            return;
        }

        // Base calculations
        double panelTiltRad = (IntPanelAngleDeg * Math.PI) / 180.0;
        double sunElevRad = (SunElevation * Math.PI) / 180.0;
        double azimuthDiff = 0;

        double cosIncidence =
            Math.Sin(sunElevRad) * Math.Cos(panelTiltRad) +
            Math.Cos(sunElevRad) * Math.Sin(panelTiltRad) * Math.Cos(azimuthDiff);
        cosIncidence = Math.Max(0, Math.Min(1, cosIncidence));
        IncidenceAngle = (Math.Acos(cosIncidence) * 180.0) / Math.PI;

        double irradianceFactor = Math.Min(1.0, SolarIrradiance / 900.0);
        double temperatureFactor = 0.95;
        double systemLossFactor = 0.95;

        double optimalAngleDiff = Math.Abs(IntPanelAngleDeg - OptimalTilt);
        double optimalAngleFactor = Math.Max(0.9, 1.0 - (optimalAngleDiff / 90.0) * 0.2);

        // Efficiency on a 0..100 scale (matches TS logic)
        double eff =
            100.0 *
            cosIncidence *
            irradianceFactor *
            temperatureFactor *
            systemLossFactor *
            optimalAngleFactor;

        if (optimalAngleDiff < 5)
            eff = Math.Min(100, eff * 1.08);

        // Gradual noon uplift
        // Expect CurrentAngle in [0, 360]
        double noonAngle = CurrentAngle;
        double d = Math.Min(noonAngle, 360 - noonAngle);
        double strongFloorWindowDeg = 10;
        double noonWindowDeg = 15;

        if (d <= noonWindowDeg)
        {
            double weight = 0.5 * (1 + Math.Cos(Math.PI * d / noonWindowDeg));
            double t = Math.Min(1, d / strongFloorWindowDeg);
            double minAtD = 65 + (60 - 65) * t;
            double maxAtD = 75 + (68 - 75) * t;
            double noonTarget = minAtD + (maxAtD - minAtD) * irradianceFactor;

            double blended = eff + (noonTarget - eff) * weight;
            double uplifted = Math.Max(eff, blended);
            if (d <= strongFloorWindowDeg)
                uplifted = Math.Max(uplifted, irradianceFactor);

            eff = Math.Min(100, uplifted);
        }

        Efficiency = Math.Max(0, Math.Min(100, eff));
    }

    public void AngleCalculation()
    {
        double normalizedAngle = CurrentAngle;

        // For angles from 303 to 360, map to 0-57 degrees
        if (normalizedAngle >= MinAllowedAngleWrapped && normalizedAngle <= 360)
        {
            IntPanelAngleDeg = (int)(normalizedAngle - MinAllowedAngleWrapped);
        }
        // For angles from 0 to 43, map to 57-100 degrees  
        else if (normalizedAngle >= 0 && normalizedAngle <= MaxAllowedAngleWrapped)
        {
            IntPanelAngleDeg = (int)(SliderMidpoint + normalizedAngle);
        }
        else
        {
            // Keep current angle within valid range
            IntPanelAngleDeg = Math.Max(0, Math.Min(100, IntPanelAngleDeg));
        }
    }

