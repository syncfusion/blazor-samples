                                        DataSource="@locations"
                                        Value="@SelectedLocation"
                                        ValueChanged="@OnLocationChanged"
                                        Placeholder="Select Location"
                                        PopupHeight="150px"
                                        PopupWidth="212px">
                            <DropDownListFieldSettings Text="Name" Value="Name"></DropDownListFieldSettings>
                        </SfDropDownList>
                    </div>
                }
                if ((context as Node).ID == "angle")
