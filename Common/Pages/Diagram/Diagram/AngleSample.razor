                        <div class="angle-control-label" style="font-size:18px; font-weight:600">
                            Tilt Angle
                        </div>
                        <div>
                            <SfNumericTextBox TValue="int" ID="angleValue" Value="@(IntPanelAngleDeg-57)"
                                              Min="-57" Max="43" Step="1"
                                              Format="n0"
                                              StrictMode = "true" Decimals = "0" 
                                              Width="250px"
                                              ShowSpinButton="true" CssClass="angle-value">
