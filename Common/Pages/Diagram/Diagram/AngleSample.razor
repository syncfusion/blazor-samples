<style>
    .diagram-panel {
        width: 1000px;
        height: 100%;
        border-radius: 20px;
        margin-right: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
        background: transparent;
    }

    .angle-control-section {
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.06);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .angle-control-label {
        display: flex;
        align-items: center;
        font-weight: 600;
        font-size: 18px;
        color: #2c3e50;
        margin-bottom: 15px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .angle-control-label i {
            margin-right: 10px;
            font-size: 18px;
        }

    .angle-control {
        display: flex;
        align-items: center;
        background: linear-gradient(145deg, #f8f9fa, #e9ecef);
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 15px;
        transition: all 0.3s ease;
    }

    .angle-button {
        background: linear-gradient(145deg, #3498db, #2980b9);
        border: none;
        color: white;
        font-size: 20px;
        font-weight: bold;
        cursor: pointer;
        padding: 12px 16px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
        transition: all 0.2s ease;
        min-width: 45px;
    }

    .angle-display {
        flex: 1;
        text-align: center;
        margin: 0 20px;
    }

    .angle-value {
        height:40px !important;
        font-size:large;
    }

    .angle-description {
        font-size: 15px;
        color: #7f8c8d;
        font-weight: 500;
        margin-top: 10px;
    }

