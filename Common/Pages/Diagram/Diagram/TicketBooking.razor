@page "/diagram/ticket-booking"
@using Syncfusion.Blazor.Diagram
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Popups
@*Hidden:Lines*@
@inject IJSRuntime JSRuntime
@inherits SampleBaseComponent;
@inject NavigationManager NavigationManager
@implements IDisposable
@*End:Hidden*@

<ActionDescription>
<p>This sample implements functional movie ticket booking interface using Syncfusion® Blazor Diagram with real-time availability and price updates.</p>

<p>Booking features:</p>
<ul>
  <li>Dynamic seating layout based on showtime</li>
  <li>Real-time seat availability</li>
  <li>Select up to 10 seats per tier</li>
  <li>Instant booking summary updates</li>
  <li>Price and fee calculations</li>
  <li>Seat detail tooltips</li>
  <li>Confirmation screen with booking ID</li>
</ul>
</ActionDescription>


