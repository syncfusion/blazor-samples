                        <span>+ Fees: $@ConvenienceFees.ToString("F0")</span>
                    }
                </div>
            }
            <SfButton class="btn-proceed" @onclick="ProceedToBooking" disabled="@(CurrentSelection.Count == 0)">Proceed</SfButton>
        </div>
    </div>

