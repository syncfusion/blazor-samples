    @@font-face {
        font-family: 'em-icons';
        src:
        url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    .em-icons { 
        font-family: 'em-icons';
    }

    .e-file::before {
        content: '\e700';
    }

    .e-edit::before {
        content: '\e701';
    }

    .e-tool::before {
        content: '\e7cf';
    }

    .e-cut::before {
        content: '\e704';
    }

    .e-copy::before {
        content: '\e705';
