@page "/stepper/orientation"

@*Hidden:Lines*@

@using Syncfusion.Blazor.Navigations
@inherits SampleBaseComponent

@*End:Hidden*@

<SampleDescription>
   <p>This sample showcases the orientation option in the Stepper component.</p>
</SampleDescription>

<ActionDescription>
    <p>This example demonstrates how to switch between different orientations and change the label position within the Stepper (<code>Start</code>, <code>End</code>, <code>Top</code>, <code>Bottom</code>). The Stepper control can be oriented <code>horizontally</code> or <code>vertically</code> using the <code>Orientation</code> property.</p>
</ActionDescription>

<div class="control-section">
    <div class="orientation-stepper-section">
        <div id="orientation-options">
            <div class="orientation-header-wrapper">
                <p> Orientation </p>
                <div class="e-btn-group">
                    <input type="radio" id="horizontal" name="orientation" value="Horizontal" @oninput="@updateOrientation" checked />
                    <label class="e-btn" for="horizontal">Horizontal</label>
                    <input type="radio" id="vertical" name="orientation" value="Vertical" @oninput="@updateOrientation" />
                    <label class="e-btn" for="vertical">Vertical</label>
                </div>
            </div>
            <div class="orientation-header-wrapper">
                <p> Label Position </p>
                <div class="e-btn-group">
                    <input type="radio" id="start" name="position" value="Start" @oninput="@updateLabelPosition" />
                    <label class="e-btn" for="start">Start</label>
                    <input type="radio" id="end" name="position" value="End" @oninput="@updateLabelPosition" checked />
                    <label class="e-btn" for="end">End</label>
                    <input type="radio" id="top" name="position" value="Top" @oninput="@updateLabelPosition" />
                    <label class="e-btn" for="top">Top</label>
                    <input type="radio" id="bottom" name="position" value="Bottom" @oninput="@updateLabelPosition" />
                    <label class="e-btn" for="bottom">Bottom</label>
                </div>
            </div>
        </div>
        <div class="orientation-stepper-control">
            <SfStepper @ref="stepperOrientation" ID="orientation-stepper" ActiveStep="1">
                <StepperSteps>
                    <StepperStep IconCss="sf-icon-ordered" Label="Orders"></StepperStep>
                    <StepperStep IconCss="sf-icon-review" Label="Review"></StepperStep>
                    <StepperStep IconCss="sf-icon-package" Label="Packing"></StepperStep>
                    <StepperStep IconCss="sf-icon-delivery" Label="Shipping"></StepperStep>
                </StepperSteps>
            </SfStepper>
        </div>
    </div>
</div>

@code {
    private SfStepper stepperOrientation;
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            stepperOrientation.LabelPosition = StepperLabelPosition.End;
            stepperOrientation.Orientation = StepperOrientation.Horizontal;
            StateHasChanged();
        }
    }
    private void updateOrientation(Microsoft.AspNetCore.Components.ChangeEventArgs args)
    {
        stepperOrientation.Orientation = (StepperOrientation)Enum.Parse(typeof(StepperOrientation), args.Value.ToString());
    }
    private void updateLabelPosition(Microsoft.AspNetCore.Components.ChangeEventArgs args)
    {
        stepperOrientation.LabelPosition = (StepperLabelPosition)Enum.Parse(typeof(StepperLabelPosition), args.Value.ToString());
    }
}

