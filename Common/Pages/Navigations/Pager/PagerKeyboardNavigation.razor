@page "/pager/keyboard-navigation"

@using Syncfusion.Blazor.Navigations
@*Hidden:Lines*@
@inherits SampleBaseComponent
@inject NavigationManager NavigationManager


@*End:Hidden*@

<ActionDescription>
<p>This sample demonstrates keyboard shortcut support for Pager component interaction.</p>
    
    <p>Supported keyboard shortcuts include:</p>
    
    <ul>
        <li><span class="keys"><kbd>Page Down</kbd> / <kbd>Right Arrow</kbd></span> - Navigate to next page</li>
        <li><span class="keys"><kbd>Page Up</kbd> / <kbd>Left Arrow</kbd></span> - Navigate to previous page</li>
        <li><span class="keys"><kbd>Enter</kbd> / <kbd>Space</kbd></span> - Select currently focused page</li>
        <li><span class="keys"><kbd>Tab</kbd></span> - Focus next pager item</li>
        <li><span class="keys"><kbd>Shift</kbd> + <kbd>Tab</kbd></span> - Focus previous pager item</li>
        <li><span class="keys"><kbd>Home</kbd></span> - Navigate to first page</li>
        <li><span class="keys"><kbd>End</kbd></span> - Navigate to last page</li>
        <li><span class="keys"><kbd>Alt</kbd> + <kbd>Page Up</kbd></span> - Navigate to previous pager</li>
        <li><span class="keys"><kbd>Alt</kbd> + <kbd>Page Down</kbd></span> - Navigate to next pager</li>
    </ul>
</ActionDescription>



<div class="control-section">
    <div class="frame" style="width: 830px; margin-top: 60px; margin-left: 30px">
        <SfPager TotalItemsCount="50" NumericItemsCount="5" PageSize="5" PageSizes="@pagesizes" >
        </SfPager>
    </div>
</div>

@code{
     private List<int> pagesizes = new List<int> { 5, 10, 12, 20 };
    
}

