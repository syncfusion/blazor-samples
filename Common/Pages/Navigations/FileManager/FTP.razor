@page "/file-manager/ftp-file-provider"

@using Syncfusion.Blazor.FileManager;


@*Hidden:Lines*@
@inherits SampleBaseComponent
@inject NavigationManager NavigationManager


@*End:Hidden*@

<ActionDescription>
<p>This sample demonstrates integration of the <a target="_blank" rel="noopener" href="https://github.com/SyncfusionExamples/ftp-aspcore-file-provider" aria-label="GitHub sample link of File Transfer Protocol file system provider">File Transfer Protocol file system provider</a> with the File Manager component for remote file management.</p>
    
    <p>Supported file operations include create, rename, delete, refresh, and more. The FTP file system provider offers efficient cloud database file storage using JSON representation.</p>
    
    <p>Setup requirements:</p>
    
    <ul>
        <li>Create FTP connection</li>
        <li>Configure connection details in the <code>SetFTPConnection</code> method:
            <ul>
                <li>Hostname</li>
                <li>Username</li>
                <li>Password</li>
            </ul>
        </li>
    </ul>
    
    <p>Refer to the <a target="_blank" rel="noopener" href="https://github.com/SyncfusionExamples/ftp-aspcore-file-provider" aria-label="GitHub sample link of File Transfer Protocol file system provider">FTP file system provider repository</a> for implementation details.</p>
</ActionDescription>


<div class="control-section">
    @* Initialization of File Manager component with FTP file provider *@
    <SfFileManager TValue="FileManagerDirectoryContent" ShowFileExtension="false">
        <FileManagerAjaxSettings Url="https://ej2-ftp-aspcore-service.azurewebsites.net/api/FTPProvider/FTPFileoperations"
                                 UploadUrl="https://ej2-ftp-aspcore-service.azurewebsites.net/api/FTPProvider/FTPUpload"
                                 DownloadUrl="https://ej2-ftp-aspcore-service.azurewebsites.net/api/FTPProvider/FTPDownload"
                                 GetImageUrl="https://ej2-ftp-aspcore-service.azurewebsites.net/api/FTPProvider/FTPGetImage">
        </FileManagerAjaxSettings>
        <FileManagerToolbarSettings ToolbarItems="@Items"></FileManagerToolbarSettings>
        <FileManagerContextMenuSettings File="@FileItems" Layout="@LayoutItems" Visible="true"></FileManagerContextMenuSettings>
    </SfFileManager>
</div>

@code {
    

    
    public List<ToolBarItemModel> Items = new List<ToolBarItemModel>()
    {
        new ToolBarItemModel() { Name = "NewFolder" },
        new ToolBarItemModel() { Name = "Cut" },
        new ToolBarItemModel() { Name = "Copy" },
        new ToolBarItemModel() { Name = "Paste" },
        new ToolBarItemModel() { Name = "Delete" },
        new ToolBarItemModel() { Name = "Download" },
        new ToolBarItemModel() { Name = "Rename" },
        new ToolBarItemModel() { Name = "SortBy" },
        new ToolBarItemModel() { Name = "Refresh" },
        new ToolBarItemModel() { Name = "Selection" },
        new ToolBarItemModel() { Name = "View" },
        new ToolBarItemModel() { Name = "Details" },
    };
    public string[] LayoutItems = new string[] { "SortBy", "View", "Refresh", "|", "Paste", "|", "NewFolder", "|", "Details", "|", "SelectAll" };
    public string[] FileItems = new string[] { "Cut", "Copy", "|", "Delete", "Download", "Rename", "|", "Details" };
}
