@page "/breadcrumb/events"

@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Buttons

@*Hidden:Lines*@
@inherits SampleBaseComponent
@*End:Hidden*@

<SampleDescription>
    <p>This sample demonstrates the events that will be triggered for various actions in <code>Breadcrumb</code> component. The event details are showcased in the event trace panel.</p>
</SampleDescription>
<ActionDescription>
    <p>In this demo, the following actions are traced by the event trace panel:</p>
    <ul>
        <li>ItemClicked - Triggered when a breadcrumb item is clicked.</li>
        <li>ItemRendering - Triggered while rendering each breadcrumb item and separator.</li>
    </ul>
    <p><b>See also</b></p>
    <ul>
       <li><a href="https://blazor.syncfusion.com/documentation/breadcrumb/getting-started/" target="_blank" aria-label="Getting started with Blazor Breadcrumb">Getting started with Blazor Breadcrumb</a></li>
    </ul>
</ActionDescription>

<div class="col-lg-8 control-section sb-property-border">
    <div class="content-wrapper">
        <div class="row material2">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                <h5 style="display: inline-block">Breadcrumb with Events</h5>
                <SfButton class="e-small reset-btn" @onclick="ResetBreadcrumbState">Reset State</SfButton>
            </div>
        </div>
        <div class="row material2">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                <SfBreadcrumb ItemClicked="@HandleItemClicked" ItemRendering="@HandleItemRendering" @bind-ActiveItem="@ActiveBreadcrumbItem">
                    <BreadcrumbItems>
                        <BreadcrumbItem Text="Program Files" IconCss="e-bicons e-folder"/>
                        <BreadcrumbItem Text="Commom Files" IconCss="e-bicons e-folder"/>
                        <BreadcrumbItem Text="Services" IconCss="e-bicons e-folder"/>
                        <BreadcrumbItem Text="Config.json" IconCss="e-bicons e-file"/>
                    </BreadcrumbItems>
                </SfBreadcrumb>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-4 property-section">
    <div class="property-panel-section">
        <div class="property-panel-header">Event Trace</div>
        <div class="property-panel-content">
            <table id="property" title="Event Trace" class="property-panel-table">
                <tbody>
                <tr>
                    <td>
                        <div class="eventarea" style="height: 245px; overflow: auto" tabindex="0">
                            <div class="EventLog" id="EventLog" style="word-break: normal;">
                                <span>@((MarkupString)EventLog)</span>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="evtbtn" style="padding-bottom: 10px">
                            <button class="e-btn e-outline" @onclick="ClearEventLog">Clear log</button>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private string EventLog { get; set; } = "";
    private string ActiveBreadcrumbItem { get; set; } = "Config.json";

    private void ClearEventLog()
    {
        EventLog = String.Empty;
    }

    private void HandleItemClicked(BreadcrumbClickedEventArgs args)
    {
        EventLog += "<span>An <b>ItemClicked</b> event is triggered<hr></span>";
    }

    private void HandleItemRendering(BreadcrumbItemRenderingEventArgs args)
    {
        EventLog += "<span>An <b>ItemRendering</b> event is triggered<hr></span>";
    }

// Resets the Breadcrumb control to its initial state
    private void ResetBreadcrumbState()
    {
        ActiveBreadcrumbItem = "Config.json";
    }

}
