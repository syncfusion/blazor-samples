@page "/breadcrumb/overflow-modes"

@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Navigations

@*Hidden:Lines*@
@inherits SampleBaseComponent
@*End:Hidden*@

<ActionDescription>
<p>This sample demonstrates different overflow modes (<code>Menu</code>, <code>Hidden</code>, <code>Collapsed</code>, <code>Wrap</code>, and <code>Scroll</code>) in the <b>Breadcrumb</b> component.</p>
    
    <p>The <a href="https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.Navigations.SfBreadcrumb.html#Syncfusion_Blazor_Navigations_SfBreadcrumb_OverflowMode" aria-label="OverflowModes">OverflowMode</a> property manages item display when breadcrumb width exceeds container space or when <a href="https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.Navigations.SfBreadcrumb.html#Syncfusion_Blazor_Navigations_SfBreadcrumb_MaxItems" aria-label="MaxItems">MaxItems</a> count is reached:</p>
    
    <ul>
        <li><code>Menu</code> - Displays accommodated items with remaining items in a submenu</li>
        <li><code>Hidden</code> - Shows only MaxItems count; remaining items hidden until previous item is clicked</li>
        <li><code>Collapsed</code> - Shows first and last items only; remaining items hidden with collapse icon for expansion</li>
        <li><code>Wrap</code> - Wraps items across multiple lines when space is exceeded</li>
        <li><code>Scroll</code> - Displays HTML scroll bar when breadcrumb width exceeds container space</li>
        <li><code>None</code> - Shows all items on a single line</li>
    </ul>
    
    <p><b>See also:</b></p>
    <ul>
        <li><a href="https://blazor.syncfusion.com/documentation/breadcrumb/overflow" target="_blank" rel="noopener" aria-label="Blazor Breadcrumb - Overflow Modes">Blazor Breadcrumb - Overflow Modes</a></li>
    </ul>
</ActionDescription>


<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row material2">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                <h5 style="display: inline-block">Overflow Mode - Menu</h5>
                <SfButton class="e-small reset-btn" @onclick="ResetBreadcrumbState  ">Reset State</SfButton>
            </div>
        </div>
        <div class="row material2">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                <SfBreadcrumb EnableNavigation="false" ActiveItem="@MenuActiveItem" MaxItems="3" OverflowMode="BreadcrumbOverflowMode.Menu">
                    <BreadcrumbItems>
                        <BreadcrumbItem Text="Home" Url="./"/>
                        <BreadcrumbItem Text="Breadcrumb" Url="./breadcrumb"/>
                        <BreadcrumbItem Text="Default" Url="./breadcrumb/default"/>
                        <BreadcrumbItem Text="Icons" Url="./breadcrumb/icons"/>
                        <BreadcrumbItem Text="Navigation" Url="./breadcrumb/navigation"/>
                        <BreadcrumbItem Text="Overflow" Url="./breadcrumb/overflow"/>
                    </BreadcrumbItems>
                </SfBreadcrumb>
            </div>
        </div>
        <div class="row material2">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                <h5>Overflow Mode - Hidden</h5>                
            </div>
        </div>
        <div class="row material2">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                <SfBreadcrumb EnableNavigation="false" ActiveItem="@HiddenActiveItem" MaxItems="3" OverflowMode="BreadcrumbOverflowMode.Hidden">
                    <BreadcrumbItems>
                        <BreadcrumbItem Text="Home" Url="./"/>
                        <BreadcrumbItem Text="Breadcrumb" Url="./breadcrumb"/>
                        <BreadcrumbItem Text="Default" Url="./breadcrumb/default"/>
                        <BreadcrumbItem Text="Icons" Url="./breadcrumb/icons"/>
                        <BreadcrumbItem Text="Navigation" Url="./breadcrumb/navigation"/>
                        <BreadcrumbItem Text="Overflow" Url="./breadcrumb/overflow"/>
                    </BreadcrumbItems>
                </SfBreadcrumb>
            </div>
        </div>        
        <div class="row material2">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                <h5>Overflow Mode - Collapsed</h5>
            </div>
        </div>
        <div class="row material2">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                <SfBreadcrumb EnableNavigation="false" ActiveItem="@CollapsedActiveItem" MaxItems="3" OverflowMode="BreadcrumbOverflowMode.Collapsed">
                    <BreadcrumbItems>
                        <BreadcrumbItem Text="Home" Url="./"/>
                        <BreadcrumbItem Text="Breadcrumb" Url="./breadcrumb"/>
                        <BreadcrumbItem Text="Default" Url="./breadcrumb/default"/>
                        <BreadcrumbItem Text="Icons" Url="./breadcrumb/icons"/>
                        <BreadcrumbItem Text="Navigation" Url="./breadcrumb/navigation"/>
                        <BreadcrumbItem Text="Overflow" Url="./breadcrumb/overflow"/>
                    </BreadcrumbItems>
                </SfBreadcrumb>
            </div>
        </div>
        <div class="row material2">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                <h5>Overflow Mode - Wrap</h5>
            </div>
        </div>
        <div class="row material2">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                <SfBreadcrumb EnableNavigation="false" ActiveItem="@WrapActiveItem" OverflowMode="BreadcrumbOverflowMode.Wrap" class="breadcrumb-wrap-style">
                    <BreadcrumbItems>
                        <BreadcrumbItem Text="Home" Url="./"/>
                        <BreadcrumbItem Text="Breadcrumb" Url="./breadcrumb"/>
                        <BreadcrumbItem Text="Default" Url="./breadcrumb/default"/>
                        <BreadcrumbItem Text="Icons" Url="./breadcrumb/icons"/>
                        <BreadcrumbItem Text="Navigation" Url="./breadcrumb/navigation"/>
                        <BreadcrumbItem Text="Overflow" Url="./breadcrumb/overflow"/>
                    </BreadcrumbItems>
                </SfBreadcrumb>
            </div>
        </div>
        <div class="row material2">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                <h5>Overflow Mode - Scroll</h5>
            </div>
        </div>
        <div class="row material2">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                <SfBreadcrumb EnableNavigation="false" ActiveItem="@ScrollActiveItem" OverflowMode="BreadcrumbOverflowMode.Scroll" class="breadcrumb-scroll-style">
                    <BreadcrumbItems>
                        <BreadcrumbItem Text="Home" Url="./"/>
                        <BreadcrumbItem Text="Breadcrumb" Url="./breadcrumb"/>
                        <BreadcrumbItem Text="Default" Url="./breadcrumb/default"/>
                        <BreadcrumbItem Text="Icons" Url="./breadcrumb/icons"/>
                        <BreadcrumbItem Text="Navigation" Url="./breadcrumb/navigation"/>
                        <BreadcrumbItem Text="Overflow" Url="./breadcrumb/overflow"/>
                    </BreadcrumbItems>
                </SfBreadcrumb>
            </div>
        </div>
    </div>
</div>

@code {
    private string MenuActiveItem { get; set; }= "Overflow";
    private string HiddenActiveItem { get; set; }= "Overflow";    
    private string CollapsedActiveItem { get; set; }= "Overflow";
    private string WrapActiveItem { get; set; }= "Overflow";
    private string ScrollActiveItem { get; set; }= "Overflow";
    

    // To refresh all Breadcrumb control state when reset button clicked
    private void ResetBreadcrumbState  () {
        MenuActiveItem = HiddenActiveItem = CollapsedActiveItem = WrapActiveItem = ScrollActiveItem = "Overflow";        
    }
}

@*Hidden:Lines*@
<style>
    .content-wrapper {
        width: 90%;
        margin: 0 auto;
        min-width: 85px;
    }

    .breadcrumb-wrap-style {
        width: 255px;
    }

    .breadcrumb-scroll-style {
        width: 300px;
    }
    .content-wrapper div.row {
        padding: 15px 0px;
    }

    @@media only screen and (max-width: 480px) {
        .content-wrapper {
            width: 92%;
        }

        .col-xs-12,
        .col-xs-4,
        .col-xs-12 {
            padding: 10px 5px;
            width: 100%;
        }

        .content-wrapper div.row {
            padding: 0px;
        }
    }

    .tailwind .e-breadcrumb,
    .tailwind-dark .e-breadcrumb {
        margin-left: -12px;
    }

    .material .e-breadcrumb,
