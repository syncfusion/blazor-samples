@page "/fab/position"
@using Syncfusion.Blazor.Buttons
@*Hidden:Lines*@
@inherits SampleBaseComponent
@*End:Hidden*@

<SampleDescription>
    <p>This sample demonstrates the different positions of the Floating Action Button in the target container.</p>
</SampleDescription>
<ActionDescription>
    <p>
        Use the <code>Position</code> property to change the position of the FAB in the target element.
    </p>
</ActionDescription>
<div class="control-section">
    <div id="target" class="fab-position-container custom-index">
        <SfFab title="Top Left" Target="#target" Position="FabPosition.TopLeft" CssClass="e-success" IconCss="fab-icons fab-icon-people" aria-label="Top Left positioned button"></SfFab>
        <SfFab title="Top Center" Target="#target" Position="FabPosition.TopCenter" CssClass="e-warning" IconCss="fab-icons fab-icon-people" aria-label="Top Center positioned button"></SfFab>
        <SfFab title="Top Right" Target="#target" Position="FabPosition.TopRight" CssClass="e-success" IconCss="fab-icons fab-icon-people" aria-label="Top Right positioned button"></SfFab>
        <SfFab title="Middle Left" Target="#target" Position="FabPosition.MiddleLeft" CssClass="e-warning" IconCss="fab-icons fab-icon-people" aria-label="Middle Left positioned button"></SfFab>
        <SfFab title="Middle Center" Target="#target" Position="FabPosition.MiddleCenter" IconCss="fab-icons fab-icon-people" aria-label="Middle Center positioned button"></SfFab>
        <SfFab title="Middle Right" Target="#target" Position="FabPosition.MiddleRight" CssClass="e-warning" IconCss="fab-icons fab-icon-people" aria-label="Middle Right positioned button"></SfFab>
        <SfFab title="Bottom Left" Target="#target" Position="FabPosition.BottomLeft" CssClass="e-success" IconCss="fab-icons fab-icon-people" aria-label="Bottom Left positioned button"></SfFab>
        <SfFab title="Bottom Center" Target="#target" Position="FabPosition.BottomCenter" CssClass="e-warning" IconCss="fab-icons fab-icon-people" aria-label="Bottom Center positioned button"></SfFab>
        <SfFab title="Bottom Right" Target="#target" Position="FabPosition.BottomRight" CssClass="e-success" IconCss="fab-icons fab-icon-people" aria-label="Bottom Right positioned button"></SfFab>
    </div>
</div>



<style>
    .fab-position-container {
        position: relative;
        min-height: 400px;
    }

    .custom-index {
        z-index: 500 !important;
    }    

    @@font-face {
        font-family: 'fab-icons';
        src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    [class^="fab-icon-"],
    [class*=" fab-icon-"] {
        font-family: 'fab-icons' !important;
        speak: none;
        font-size: 55px;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: inherit;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .fab-icon-people:before {
        content: "\e70a";
    }
</style>
