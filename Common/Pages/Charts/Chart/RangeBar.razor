        {
            Width = "100%";
        }
    }

    public class RangeBarChartData
    {
        public string Month { get; set; }
        public double CA_LowTemp { get; set; }
        public double CA_HighTemp { get; set; }
        public string Text { get; set; }
        public double CO_LowTemp { get; set; }
