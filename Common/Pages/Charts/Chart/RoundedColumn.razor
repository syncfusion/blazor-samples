    protected override void OnInitialized()
    {
        
        Theme = ThemeHelper.GetCurrentTheme(NavigationManager.Uri);
        if (SampleService.IsDevice)
        {
            AxislabelRotation = LabelIntersectAction.None;
            Rotation = -45;
            Width = "100%";
            TopLeft = 10;
            TopRight = 10;
            BottomLeft = 10;
            BottomRight = 10;
