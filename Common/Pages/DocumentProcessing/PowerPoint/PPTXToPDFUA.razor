@page "/powerpoint/pptx-to-pdfua"
@inject Microsoft.JSInterop.IJSRuntime JS
@using System.IO
@using Syncfusion.Blazor.Buttons
@using BlazorDemos.Data.DocumentProcessing.PowerPoint
@inject HttpClient Http
@*Hidden:Lines*@
@inherits SampleBaseComponent
@inject NavigationManager NavigationManager


@*End:Hidden*@

<SampleDescription>
  <p style="font-size:16px">This sample demonstrates how to convert a PowerPoint Presentation to PDF/UA (Section 508 compliant) using .NET PowerPoint library and .NET PDF library.</p>  
</SampleDescription>
<ActionDescription>
    <div>
        This feature is used for people who require assistive technologies when the electronic content is ready. The .NET PowerPoint library supports converting a PowerPoint Presentation to a tagged PDF with Section 508 compliant. For more information about PPTX to PDF/UA, see this 
        <a href="https://help.syncfusion.com/file-formats/presentation/presentation-to-pdf#accessible-pdf-document" aria-label="documentation section">documentation</a>
        section.
    </div>
</ActionDescription>

<div class="control-section">
    <p style="font-size:16px">Click the button to view the PDF/UA document generated by .NET PowerPoint library and .NET PDF library. Please note that Adobe Reader or its equivalent is required to view the resultant document.</p>
    <div class="button-section">
        <div id="button-control">
            <div class="row">
                <div>
                    <SfButton @onclick="PPTXToPDFInput">Input Template</SfButton>
                    <SfButton @onclick="PresentationToPDF">Convert to PDF</SfButton>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .control-section .row {
        margin: 10px 0;
    }
</style>

@code {
    MemoryStream documentStream;
    //Hidden:Lines
    
    Dictionary<string, MemoryStream> fileData = new Dictionary<string, MemoryStream>();
    
    //End:Hidden

    /// <summary>
    /// Create and download the Presentation document
    /// </summary>
    public async Task PresentationToPDF(MouseEventArgs args)
    {
        await LoadTemplate();
        PPTXToPDFUAService service = new PPTXToPDFUAService(fileData);
        documentStream = service.PDFConversion();
        service.Close();
        await JS.SaveAs("PPTXToPDF_Pdf_UA.pdf", documentStream.ToArray());
    }

    /// <summary>
    /// Create and download the Presentation document
    /// </summary>
    public async Task PPTXToPDFInput(MouseEventArgs args)
    {
        await LoadTemplate();
        PPTXToPDFUAService service = new PPTXToPDFUAService(fileData);
        documentStream = service.PDFInput();
        service.Close();
        await JS.SaveAs("PPTXToPDF.pptx", documentStream.ToArray());
    }
    /// <summary>
    /// Load the template document
    /// </summary>
    public async Task LoadTemplate()
    {
        if (fileData != null && fileData.Count == 0)
        {
            string fileDataPath = NavigationManager.BaseUri + SampleService.WebAssetsPath;
            byte[] data = await Http.GetByteArrayAsync(fileDataPath + "data/powerpoint/template.pptx");
            fileData.Add("template.pptx", new MemoryStream(data));
        }
    }
}