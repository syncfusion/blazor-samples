        font-style: normal;
    }

    .e-swap-icon {
        font-family: 'swap-icon' !important;
        speak: none;
        font-size: 40px;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
