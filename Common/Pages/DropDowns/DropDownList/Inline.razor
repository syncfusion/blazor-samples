@page "/DropDown-List/Inline"

@using Syncfusion.Blazor.DropDowns

@*Hidden:Lines*@
@inherits SampleBaseComponent
@*End:Hidden*@

<SampleDescription>
    <p>This sample demonstrates the rendering of the DropDownList component in line with other content. Click the DropDownList component and select an item from the dropdown list.</p>
</SampleDescription>
<ActionDescription>
   <p>The DropDownList component is rendered in line with other content by overriding the styles.</p>
</ActionDescription>

<div class="col-lg-12 control-section">
    <div class="control-wrapper">
        <div class="inline">
            <span id="contentText" class="dropdown-size">
                Blazor top expert of this week is
                <SfDropDownList TValue="string" TItem="Data" CssClass="inlinecss" Placeholder="Select an employee" DataSource="@InlineEmployees" Value="@TextValue" Width="65px" PopupHeight="200px" PopupWidth="140px">
                    <DropDownListFieldSettings Value="Name"></DropDownListFieldSettings>
                </SfDropDownList>
            </span>
        </div>
    </div>
</div>

@code{
    public string TextValue { get; set; } = "Michael";
    
    public class Data
    {
        public string? Name { get; set; }
        public string? Eimg { get; set; }
    }

    private List<Data> InlineEmployees = new List<Data>
    {
        new Data() { Name = "Andrew", Eimg = "7" },
        new Data() { Name = "Anne", Eimg = "1" },
        new Data() { Name = "Janet", Eimg = "3" },
        new Data() { Name = "Laura", Eimg = "2" },
        new Data() { Name = "Michael", Eimg = "9" },
        new Data() { Name = "Nancy", Eimg = "4" },
        new Data() { Name = "Robert", Eimg = "8" },
        new Data() { Name = "Steven", Eimg = "10" }
    };
}

