@page "/DropDown-List/Keyboard-Navigation"

@using Syncfusion.Blazor.DropDowns

@*Hidden:Lines*@
@inherits SampleBaseComponent
@*End:Hidden*@

<ActionDescription>
<p>This example demonstrates keyboard interaction capabilities of Blazor DropDownList for efficient navigation and selection.</p>

<p>Keyboard shortcuts supported:</p>

<p><b>Focus Navigation</b></p>
<ul>
  <li><span class="key-class"><kbd>Alt</kbd> + <kbd>J</kbd></span> – Focuses on first component</li>
</ul>

<p><b>Input Navigation</b></p>
<ul>
  <li><span class="key-class"><kbd>Alt</kbd> + <kbd>Down arrow</kbd></span> – Opens dropdown popup</li>
  <li><span class="key-class"><kbd>Alt</kbd> + <kbd>Up arrow</kbd></span> – Closes dropdown popup</li>
  <li><span class="key-class"><kbd>Tab</kbd></span> – Focuses next Tab Index element</li>
  <li><span class="key-class"><kbd>Shift</kbd> + <kbd>Tab</kbd></span> – Focuses previous Tab Index element</li>
</ul>

<p><b>Selection</b></p>
<ul>
  <li><span class="key-class"><kbd>Enter</kbd></span> – Selects focused item or toggles popup</li>
</ul>

<p><b>Popup Navigation</b></p>
<ul>
  <li><span class="key-class"><kbd>Down arrow</kbd></span> – Selects first item or next item</li>
  <li><span class="key-class"><kbd>Up arrow</kbd></span> – Selects previous item</li>
  <li><span class="key-class"><kbd>Page down</kbd></span> – Scrolls next page</li>
  <li><span class="key-class"><kbd>Page up</kbd></span> – Scrolls previous page</li>
  <li><span class="key-class"><kbd>Home</kbd></span> – Selects first item</li>
  <li><span class="key-class"><kbd>End</kbd></span> – Selects last item</li>
  <li><span class="key-class"><kbd>Esc</kbd></span> – Closes popup list</li>
</ul>
</ActionDescription>


<div class="col-lg-12 control-section">
    <div class="control-wrapper">
        <label class="example-label">Select a color</label>
        <SfDropDownList TValue="int" TItem="Colors" Placeholder="e.g. Dark Orange" DataSource="@ColorsData"
            PopupHeight="230px" @bind-Value="@ColorValue" AllowFiltering="true">
            <DropDownListFieldSettings Text="Color" Value="Code"></DropDownListFieldSettings>
        </SfDropDownList>
    </div>
</div>

@code {
    
    public int ColorValue { get; set; } = 1;

    public class Colors
    {
        public int Code { get; set; }
        public string? Color { get; set; }
    }

    public List<Colors> ColorsData = new List<Colors>()
    {
        new Colors() { Color = "Chocolate", Code = 1 },
        new Colors() { Color = "Cadet Blue", Code = 2 },
        new Colors() { Color = "Dark Orange", Code = 3 },
        new Colors() { Color = "Dark Red", Code = 4},
        new Colors() { Color = "Fuchsia", Code = 5 },
        new Colors() { Color = "Hot Pink", Code = 6 },
        new Colors() { Color = "Indigo", Code = 7 },
        new Colors() { Color = "Lime Green", Code = 8 },
        new Colors() { Color = "Orange Red", Code = 9 },
        new Colors() { Color = "Tomato", Code = 10 },
        new Colors() { Color = "Brown", Code = 11 },
        new Colors() { Color = "Maroon", Code = 12 },
        new Colors() { Color = "Green", Code = 13 },
        new Colors() { Color = "Pink", Code = 14 },
        new Colors() { Color = "Purple", Code = 15 }
    };
}

<style>
    .control-wrapper {
        max-width: 250px;
        margin: 0 auto;
        padding: 50px 0px 0px;
    }

    .example-label {
        font-size: 14px;
        margin-bottom: 6px;
    }

    .description {
        margin: 4px;
    }
    .key-class {
        display: inline-block;
        width: 130px;
    }
</style>