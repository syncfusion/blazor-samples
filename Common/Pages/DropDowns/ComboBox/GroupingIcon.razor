@page "/ComboBox/Grouping-Icon"

@using Syncfusion.Blazor.DropDowns

@*Hidden:Lines*@
@inherits SampleBaseComponent
@*End:Hidden*@

<ActionDescription>
<p>This example demonstrates grouping and icon support in ComboBox for organized data presentation.</p>

<p>Grouping features:</p>
<ul>
  <li>Group relevant items under categories using <a href="https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.DropDowns.ComboBoxFieldSettings.html#Syncfusion_Blazor_DropDowns_ComboBoxFieldSettings_GroupBy" target="_blank" rel="noopener" aria-label="Navigate to GroupBy property">GroupBy</a> property</li>
  <li>Vegetables grouped by Category property in data object</li>
</ul>

<p>Icon support:</p>
<ul>
  <li>Render icons in suggestion list using <a href="https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.DropDowns.ComboBoxFieldSettings.html#Syncfusion_Blazor_DropDowns_ComboBoxFieldSettings_IconCss" target="_blank" rel="noopener" aria-label="Navigate to IconCss property">IconCss</a> property</li>
</ul>

<p><b>See also</b></p>
<ul>
  <li><a href="https://blazor.syncfusion.com/documentation/combobox/grouping/" target="_blank" rel="noopener" aria-label="Navigate to Blazor ComboBox Grouping documentation">Blazor ComboBox - Grouping</a></li>
</ul>
</ActionDescription>


<div class="col-lg-12 control-section">
    <div class="col-lg-6">
        <div class="control-wrapper">
            <label class="example-label">Grouping</label>
            <SfComboBox TValue="string" TItem="Vegetables" PopupHeight="200px" Placeholder="Select a vegetable" DataSource="@GroupData">
                <ComboBoxFieldSettings GroupBy="Category" Text="Vegetable" Value="Id"/>
            </SfComboBox>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="control-wrapper">
            <label class="example-label">Icons</label>
            <SfComboBox TValue="string" TItem="SocialMedia" Placeholder="Select a social media" DataSource="@IconData">
                <ComboBoxFieldSettings Text="SocialMediaName" IconCss="Class" Value="Id"/>
            </SfComboBox>
        </div>
    </div>
</div>

@*Hidden:Lines*@
<link href="@(SampleService.WebAssetsPath + "styles/dropdown-list/grouping.css")" rel="stylesheet" />
@*End:Hidden*@

