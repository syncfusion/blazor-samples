@page "/tree-grid/auto-wrap"
@using System.ComponentModel
@using System.Collections.ObjectModel
@using Syncfusion.Blazor.TreeGrid
@using Syncfusion.Blazor.Grids

@*Hidden:Lines*@
@using TicketData
@inherits SampleBaseComponent;
@*End:Hidden*@

<SampleDescription>
    <p>
        This sample demonstrates the Tree Grid with the text wrap option enabled for both headers and cell content. This setting ensures that long header text and cell values are fully visible by wrapping onto multiple lines instead of being truncated with an ellipsis.
    </p>
</SampleDescription>

<ActionDescription>
    <p>
        Text wrapping can be enabled by setting  the <a target="_blank" href="https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.TreeGrid.SfTreeGrid-1.html#Syncfusion_Blazor_TreeGrid_SfTreeGrid_1_AllowTextWrap">AllowTextWrap</a> property to <b>true</b>. When enabled, this property automatically wraps text in both header cells and content cells.
    </p>

    <p>
        In this demo, the <b>"Description (Comprehensive Summary of the Customer's Reported Technical Problem)"</b> column contains text that exceeds the available width, so both their header and cell content are wrapped across multiple lines for better readability.
    </p>

    <p>
        More information about auto wrap can be found in this
        <a target="_blank" href="https://blazor.syncfusion.com/documentation/treegrid/cell/#auto-wrap">documentation</a> section.
    </p>
</ActionDescription>


<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row">
            <SfTreeGrid DataSource="@TreeGridData" IdMapping="TicketID" ParentIdMapping="ParentTicketID" Height="328" TreeColumnIndex="1" AllowPaging="true" AllowTextWrap="true" AllowSorting="true" AllowFiltering="true">
                <TreeGridFilterSettings Type="Syncfusion.Blazor.TreeGrid.FilterType.Excel"></TreeGridFilterSettings>
                <TreeGridPageSettings PageSize="20" PageSizeMode="PageSizeMode.All"></TreeGridPageSettings>
                <TreeGridColumns>
                    <TreeGridColumn Field="TicketID" HeaderText="Ticket ID" Width="150" MinWidth="8" TextAlign="TextAlign.Right"></TreeGridColumn>
                    <TreeGridColumn Field="Description" ClipMode="ClipMode.EllipsisWithTooltip" HeaderText="Description (Comprehensive Summary of the Customer's Reported Technical Problem)" Width="400" MinWidth="200"></TreeGridColumn>
                    <TreeGridColumn Field="Category" HeaderText="Category" Width="135" MinWidth="8"></TreeGridColumn>
                    <TreeGridColumn Field="CustomerName" HeaderText="Customer Name" Width="170" MinWidth="120"></TreeGridColumn>
                    <TreeGridColumn Field="Priority" HeaderText="Priority" Width="135" MinWidth="8"></TreeGridColumn>
                    <TreeGridColumn Field="Status" HeaderText="Status" Width="125" MinWidth="8" TextAlign="TextAlign.Left"></TreeGridColumn>
                    <TreeGridColumn Field="CreatedDate" HeaderText="Created Date" Width="150" Format="MM/dd/yyyy" Type="ColumnType.Date" />
                    <TreeGridColumn Field="DueDate" HeaderText="Due Date" Width="130" Format="MM/dd/yyyy" Type="ColumnType.Date" />
                </TreeGridColumns>
            </SfTreeGrid>
        </div>
    </div>
</div>

@*Hidden:Lines*@
<style>
    .e-bigger .e-treegrid .e-treegridexpand,
    .e-bigger .e-treegrid .e-treegridcollapse {
        width: 18px !important;
    }
</style>
@*End:Hidden*@

@code {
    private List<SupportTicketData> TreeGridData { get; set; } = new List<SupportTicketData>();
    protected override void OnInitialized()
    {
        TreeGridData = SupportTicketData.GetSupportTickets();
    }
}





