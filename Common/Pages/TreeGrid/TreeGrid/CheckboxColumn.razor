@page "/tree-grid/checkbox-column"

@using Syncfusion.Blazor.TreeGrid
@using Syncfusion.Blazor.Grids

@*Hidden:Lines*@
@using Selfdata
@inherits SampleBaseComponent;
@*End:Hidden*@

<ActionDescription>
<p>
    This sample demonstrates checkbox column selection. Selecting a parent row checkbox selects its child rows; selecting all children selects the parent.
  </p>
  <p>
    Render checkboxes in columns by setting <code>ShowCheckbox</code> to <strong>true</strong>. Enable hierarchical selection via <code>AutoCheckHierarchy</code>. On touch devices, tap checkboxes to select.
  </p>
  <p>
    Learn more in the Checkbox column <a target="_blank" rel="noopener" href="https://blazor.syncfusion.com/documentation/treegrid/columns/checkbox-column" aria-label="Navigate to the documentation for the Checkbox column in tree grid component">documentation</a>.
  </p>
</ActionDescription>


<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row">
            <SfTreeGrid Height="380" DataSource="@TreeData" IdMapping="TaskID" ParentIdMapping="ParentID" AllowPaging="true" TreeColumnIndex="1" AutoCheckHierarchy="true">
                <TreeGridColumns>
                    <TreeGridColumn Field="TaskID" HeaderText="Task ID" Width="80" TextAlign="TextAlign.Right"></TreeGridColumn>
                    <TreeGridColumn Field="TaskName" HeaderText="Task Name" Width="180" ShowCheckbox="true"></TreeGridColumn>
                    <TreeGridColumn Field="StartDate" HeaderText="Start Date" Format="d" Type=ColumnType.Date Width="100" TextAlign="TextAlign.Right"></TreeGridColumn>
                    <TreeGridColumn Field="Duration" HeaderText="Duration" Width="100" TextAlign="TextAlign.Right"></TreeGridColumn>
                    <TreeGridColumn Field="Progress" HeaderText="Progress" Width="100"></TreeGridColumn>
                </TreeGridColumns>
            </SfTreeGrid>
        </div>
    </div>
</div>

@code{

    public List<SelfReferenceData> TreeData { get; set; } = new List<SelfReferenceData>();
    
    protected override void OnInitialized()
    {
        TreeData = SelfReferenceData.GetTree().Take(12).ToList();
    }
}
