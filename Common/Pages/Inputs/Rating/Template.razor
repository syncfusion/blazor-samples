@page "/rating/template"
@using Syncfusion.Blazor.Inputs

@*Hidden:Lines*@
@inherits SampleBaseComponent

@*End:Hidden*@

<SampleDescription>
    <p>
        This sample demonstrates customization of rating items using templates in the Blazor Rating component.
    </p>
</SampleDescription>
<ActionDescription>
    <p>
         In this example, rating item stars are customized using <code>EmptyTemplate</code>, which defines the unrated items’ appearance, and <code>FullTemplate</code>, which defines the rated items’ appearance.
    </p>
</ActionDescription>

<div class="control-section">
    <div class="rating-control">
        <div class="rating-content">
            <label for="rating1" aria-label="Heart rating" tabindex="0">Font Icon</label><br />
            <SfRating ID="rating1" Value=3>
                <EmptyTemplate>
                    <span class='custom-font sf-rating-heart'></span>
                </EmptyTemplate>
            </SfRating>
        </div>
        <div class="rating-content custom-svg">
            <label for="rating2" aria-label="svg icon rating" tabindex="0">SVG Icon</label><br />
            <SfRating ID="rating2" Value=3 EnableAnimation=false>
                <EmptyTemplate>
                    <svg width="35" height="25" class="e-rating-svg-icon">                            
                        <rect width="35" height="25" fill="transparent" style="stroke-width:2;stroke:rgb(173,181,189)" />
                    </svg>
                </EmptyTemplate>
                <FullTemplate>
                    <svg width="35" height="25" class="e-rating-svg-icon">
                        <defs>
                            <linearGradient id=@("grad"+context.Index.ToString()) x1="0%" y1="0%" x2="100%" y2="0%">
                                <stop class="start" offset="0%" />
                                <stop class="end" offset="100%" />
                            </linearGradient>
                        </defs>
                        <rect width="35" height="25" fill=@("url(#grad"+context.Index.ToString()+")") style="stroke-width:2;stroke:rgb(173,181,189)" />
                    </svg>
                </FullTemplate>
            </SfRating>
        </div>
        <div class="rating-content">
            <label for="rating3" aria-label="emoji icon rating" tabindex="0">Emoji Icon</label><br />
            <SfRating ID="rating3" Value=3 EnableSingleSelection=true EnableAnimation=false>
                <EmptyTemplate>
                    @{
                        @if(context.Index == 0)
                        {
                            <span class='angry emoji'>&#128545;</span>
                        }
                        else if(context.Index==1)
                        {
                            <span class='disagree emoji'>&#128577;</span>
                        }
                        else if(context.Index==2)
                        {
                            <span class='neutral emoji'>&#128528;</span>
                        }
                        else if(context.Index==3)
                        {
                            <span class='agree emoji'>&#128578;</span>
                        }
                        else
                        {
                            <span class='happy emoji'>&#128512;</span>
                        }
                    }
                </EmptyTemplate>
            </SfRating>
        </div>
        <div class="rating-content">
            <label for="rating4" aria-label="custom icon rating" tabindex="0">Customization</label><br />
            <SfRating ID="rating4" Value=3 CssClass="custom-icon" EnableAnimation=false></SfRating>
        </div>
    </div>
</div>



<style>
    .rating-control .rating-content {
        width: 240px;
        margin: 15px 0;
        min-height: 75px;
        padding:0;
        text-align: center;
    }

    .e-bigger .rating-control .rating-content {
        width: 260px;
        margin: 15px 0;
        min-height: 75px;
        padding:0;
        text-align: center;
    }
    .rating-control {
        margin: 6% auto;
        max-width: 600px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .rating-control .e-rating-container .custom-font {
        background: linear-gradient(to right, rgb(254,87,133,255) var(--rating-value), transparent var(--rating-value));
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        -webkit-text-stroke: 1px rgb(254,87,133,255)
    }

    .rating-control .custom-icon .e-icons:before {
        content: "\e700";
        font-family: 'sb_rating' !important;
        speak: none;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .rating-control .custom-svg .e-rating-item-container{
        padding: 0px;
    }

    .e-rating-item-container:not(.e-rating-selected) .emoji {
        filter: grayscale(1);
    }

    .e-rating-svg-icon #grad0 .start {
        stop-color: #FF0000;
    }

    .e-rating-svg-icon #grad0 .end ,
    .e-rating-svg-icon #grad1 .start {
        stop-color: #ff5101;
    }

    .e-rating-svg-icon #grad1 .end ,
    .e-rating-svg-icon #grad2 .start {
        stop-color: #ffc801;
    }

    .e-rating-svg-icon #grad2 .end ,
    .e-rating-svg-icon #grad3 .start {
        stop-color: #dbe300;
    }

    .e-rating-svg-icon #grad3 .end ,
    .e-rating-svg-icon #grad4 .start {
        stop-color: #8bc301;
    }

    .e-rating-svg-icon #grad4 .end {
        stop-color: #4eaa01;
    } 

    @@font-face {
        font-family: 'rating';
        src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    [class^="sf-rating-"], [class*=" sf-rating-"] {
        font-family: 'rating' !important;
        speak: none;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .sf-rating-heart:before {
        content: "\e702";
    }

    @@font-face {
        font-family: 'sb_rating';
        src:
        url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    [class^="sf-icon-"], [class*=" sf-icon-"] {
        font-family: 'sb_rating' !important;
        speak: none;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .sf-icon-star:before { 
        content: "\e700"; 
    }
	
</style>
