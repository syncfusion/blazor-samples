@page "/Chips/DefaultFunctionalities"

@using Syncfusion.EJ2.Blazor.Buttons

@*Hidden:Lines*@
@using ej2_blazor_samples
@{
    SampleBrowser.CurrentSampleName = "Default Functionalities";
    SampleBrowser.CurrentControlName = "Chips";
    SampleBrowser.CurrentControlCategory = "Buttons";
    SampleBrowser.CurrentControl = SampleBrowser.Config.Chips;
     SampleBrowser.ActionDescription = new string[] {
        @"<p>
        This sample demonstrates the default functionalities of Chips with different types and predefined styles. Click
        and interact the chip, to select single or multiple options from chips collection.
    </p>"
    };
    SampleBrowser.Description = new string[] {
        @"<p>
        Chip is a small block of essential information that triggers an event on click action. It contains the text, an
        image, or both, mostly used in contacts, mails or filter tags.
    </p>
    <p>In this sample, default, input, filter and choice chips are demonstrated with their default functionalities.</p>
    <ol>
        <li><b>Input chip</b>– Basic chip with delete icon, enables to remove chips from the chip list collection.</li>
        <li><b>Choice chip</b> – Used to choose a choice from available options.</li>
        <li><b>Filter chip</b> – Used to select multiple choices from available options.</li>
    </ol>"
    };
}
@*End:Hidden*@
 <div class="control-section">
    <div id="chip-default-wrapper">
        <div class="chips-headers">Chips</div>
        <div class="sample-padding">
            @*initialize default chip component*@
            <EjsChipList>               
                <ChipCollection>
                    <ChipListChip Text="Apple" CssClass="e-primary" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Microsoft" CssClass="e-info" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Google" CssClass="e-success" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Tesla" CssClass="e-warning" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Intel" CssClass="e-danger" Enabled="true"></ChipListChip>
                </ChipCollection>
            </EjsChipList>
        </div>
        <div class="chips-headers">Input Chips</div>
        <div class="sample-padding">
            @*initialize avatar chip component*@
            <EjsChipList EnableDelete="true">
                <ChipCollection>
                    <ChipListChip Text="Anne" LeadingIconCss="anne" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Janet" LeadingIconCss="janet" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Laura" LeadingIconCss="laura" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Margaret" LeadingIconCss="margaret" Enabled="true"></ChipListChip>
                </ChipCollection>
            </EjsChipList>
        </div>
        <div class="chips-headers">Filter Chips</div>
        <div class="sample-padding">
            @*initialize filter chip component*@
            <EjsChipList Selection="Selection.Multiple" SelectedChips=@FilterSelected>
                <ChipCollection>
                    <ChipListChip Text="Extra Small" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Small" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Medium" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Large" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Extra Large" Enabled="true"></ChipListChip>
                </ChipCollection>
            </EjsChipList>
        </div>
        <div class="chips-headers">Choice Chips</div>
        <div class="sample-padding">
            @*initialize choice chip component*@
            <EjsChipList ID="chip-choice" cssClass="e-outline" Selection="Selection.Single" SelectedChips=@ChoiceSelected>
                <ChipCollection>
                    <ChipListChip Text="Send a text" LeadingIconCss="text" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Set a reminder" LeadingIconCss="alarm" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Read my emails" LeadingIconCss="mail" Enabled="true"></ChipListChip>
                    <ChipListChip Text="Play a game" LeadingIconCss="game" Enabled="true"></ChipListChip>
                </ChipCollection>
            </EjsChipList>
        </div>
    </div>
</div>
@code{ 
    public int[] ChoiceSelected = {1};
    public int[] FilterSelected = {1,3};
}
