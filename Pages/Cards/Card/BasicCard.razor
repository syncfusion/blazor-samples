    }

    #SideCard{
        height: 376px;
        margin: 16px;
    }

   .e-card > .e-card-image {
        background-repeat: no-repeat;
        min-height: 165px;
    }

    .newIcon {
        background: #2CC000;
        border-radius: 12px;
        border-radius: 12px;
        font-family: HelveticaNeue-Medium, 'Segoe UI';
        font-weight: 500;
        color: #ffffff;      
